{
        "configurations": [
                {
                        "name": "Debug Mapbox Tile Server json request",
                        "type": "aws-sam",
                        "request": "direct-invoke",
                        "invokeTarget": {
                                "target": "template",
                                "templatePath": "template.yaml",
                                "logicalId": "MapboxTileServerFunction"
                        },
                        "lambda": {
                                "payload": {
                                        "path": "events/tile_json_event.json"
                                }
                        },
                        "aws": {
                                "credentials": "profile:default",
                                "region": "ap-southeast-2"
                        }
                },
                {
                        "name": "Debug Mapbox Tile Server vector tile request",
                        "type": "aws-sam",
                        "request": "direct-invoke",
                        "invokeTarget": {
                                "target": "template",
                                "templatePath": "template.yaml",
                                "logicalId": "MapboxTileServerFunction"
                        },
                        "lambda": {
                                "payload": {
                                        "path": "events/tile_event.json"
                                }
                        },
                        "aws": {
                                "credentials": "profile:default",
                                "region": "ap-southeast-2"
                        }
                },
                {
                        "name": "Attach to SAM CLI",
                        "type": "node",
                        "request": "attach",
                        "address": "localhost",
                        "port": 5555,
                        "localRoot": "${workspaceRoot}/",
                        "remoteRoot": "/var/task",
                        "protocol": "inspector",
                        "stopOnEntry": false
                }
        ]
}
